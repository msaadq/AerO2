<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map_layout">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </fragment>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loading_tv"
        android:gravity="center"
        android:text="Loading smog data"
        android:textColor="#00beed"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true" />
    <android.support.design.widget.FloatingActionButton android:id="@+id/legend"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_dialog_map"
        app:backgroundTint="#00aa72"
        android:tint="#ffffff"
        android:adjustViewBounds="false"
        android:alpha="0.7" />
    <android.support.design.widget.FloatingActionButton android:id="@+id/record"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/presence_online"
        android:layout_alignParentBottom="true"
        app:backgroundTint="#ffffff"
        android:contextClickable="false"
        android:tint="#ff0000"
        android:alpha="0.7" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:progressTintMode="add"
        android:foregroundTintMode="screen" />


</RelativeLayout>
